extends layout

block title
    | Login

block content
    .row
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
            form(method="post")
                h1 Sign In
                if message
                    .form-group
                        .alert.alert-danger
                            | #{message}
                .form-group
                    input(
                        name="username"
                        type="text"
                        class="form-control"
                        placeholder="Username"
                        required=""
                        autofocus=""
                    )
                .form-group
                    input(
                        name="password"
                        type="password"
                        class="form-control"
                        placeholder="Password"
                        required=""
                    )
                .form-group
                    .row
                        .col-xs-6
                            .checkbox
                                label
                                    input(type="checkbox", value="remember-me")
                                    | Remember me
                        .col-xs-6.text-right
                            button(class="btn btn-primary", type="submit") Sign In
