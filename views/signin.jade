extends layout

block title
    | Sign In

block content
    .row
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
            form(method="post")
                h1 Sign In
                if message
                    .form-group
                        .alert.alert-danger
                            | #{message}
                .form-group
                    input(
                        name="username"
                        type="text"
                        class="form-control"
                        placeholder="Username"
                        required=""
                        autofocus=""
                    )
                .form-group
                    input(
                        name="password"
                        type="password"
                        class="form-control"
                        placeholder="Password"
                        required=""
                    )
                .text-center
                    button(class="btn btn-primary", type="submit") Sign In
