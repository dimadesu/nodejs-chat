extends layout

block title
    | Register

block content
    .row
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
            form(method="post", action="/auth/signup")
                h1 Register New Account
                .form-group
                    input(
                        name="username"
                        type="text"
                        class="form-control"
                        placeholder="Username"
                        required=""
                        autofocus=""
                    )
                .form-group
                    input(
                        name="password"
                        type="password"
                        class="form-control"
                        placeholder="Password"
                        required=""
                    )
                .form-group.text-center
                    button(
                        class="btn btn-primary"
                        type="submit"
                    ) Sign Up
